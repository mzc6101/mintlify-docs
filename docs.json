{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Samsung Developer",
  "colors": {
    "primary": "#1428A0",
    "light": "#4A6CF7",
    "dark": "#0F1B6F"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Developer Guide",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Mobile & Wearable",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Documentation Tools",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI Development Tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Samsung Developer",
          "href": "https://developer.samsung.com",
          "icon": "mobile"
        },
        {
          "anchor": "Galaxy Store",
          "href": "https://galaxystore.samsung.com",
          "icon": "store"
        },
        {
          "anchor": "Developer Forums",
          "href": "https://forum.developer.samsung.com",
          "icon": "comments"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Dev Support",
        "href": "https://developer.samsung.com/support"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Developer Portal",
      "href": "https://developer.samsung.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
