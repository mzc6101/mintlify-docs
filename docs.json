     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/SamsungDev",
      "github": "https://github.com/Samsung",
      "linkedin": "https://linkedin.com/company/samsung",
      "youtube": "https://youtube.com/SamsungDevelopers"
    }
